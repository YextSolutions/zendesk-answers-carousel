<!-- This is the html for displaying the carousel, it can be placed on any page --> 

<h2>Promoted</h2>
<div class="container text-center my-3">
  <h2 class="font-weight-light">Bootstrap Multi Slide Carousel</h2>
  <div class="carousel-row row my-auto justify-content-center">
      <div id="trendingCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-wrap=false data-bs-interval="false">
          <div class="carousel-inner" role="listbox">
            <div class="carousel-item end-card">
              <div class="col-lg-3">
                <div class="card">
                  <div class="card-body d-flex flex-column justify-content-center">
                    <p class="card-title view-all"><a>VIEW ALL</a></p>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <a class="carousel-control-prev bg-transparent w-aut" href="#trendingCarousel" role="button" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          </a>
          <a class="carousel-control-next bg-transparent w-aut" href="#trendingCarousel" role="button" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
          </a>
      </div>
  </div>
</div>
